<!--ユーザ一覧-->
<div class="row mx-0">
  <table class="table table-hover table-sm mt-3">
    <thead class="thead-dark">
      <tr class="text-center">
        <th>ユーザ名</th>
        <th> <!--フォロー/フォロー解除ボタン--></th>
      </tr>
    </thead>
    <tbody>
      <% users.each do |user| %>
        <tr class="text-center">
          <!--ユーザ名-->
          <td>
            <%= link_to user_path(user) do %>
              <%= image_tag user.get_profile_image,size: "50x50",
                  class: "rounded-circle border border-info border-3"%>
              <%= user.nickname %>
            <% end %>
          </td>
          <!--フォロー/フォロー解除ボタン-->
          <td>
            <% unless user == current_user %>
              <%= render "relationships/follow_btn",user: user %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <!--ページネーションの設定-->
  <div>
    <%= paginate users,class: "bg-reset"%>
  </div>
</div>