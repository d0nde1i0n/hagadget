<div class="container">

  <div class="row d-flex mt-5">
      <h2><span class="page_title">ユーザ情報の編集</span></h2>
      <div class="ml-auto">
        <%= link_to "マイページへ戻る",user_path(@user),class: "h4"%>
      </div>
  </div>

    <%= form_with model: @user,url: user_path(@user),method: :patch,local: true do |f| %>

      <!--エラーメッセージの表示（バリデーションにヒットした場合のみ）-->
      <%= render 'layouts/error_message',model: f.object %>

      <!--名前-->
      <div class="form-group row ml-2 mt-3">
        <div class="form-title col-3 ml-2 mt-3">
          <h4>名前</h4>
        </div>
         <div class="form-field col-8 ml-2 mt-3">
          <%= f.label :last_name,"性:　",class: "h5"%>
          <%= f.text_field :last_name%>
          <%= f.label :first_name,"　名:　",class: "h5"%>
          <%= f.text_field :first_name%>
        </div>
      </div>

      <!--ニックネーム-->
      <div class ="form-group row ml-2 mt-3">
        <div class="form-title col-3 ml-2 mt-3">
          <%= f.label :nickname,"ニックネーム",class: "h4"%>
        </div>
        <div class="form-field col-8 ml-2 mt-3">
        <%= f.text_field :nickname%>
        </div>
      </div>

      <!--職業-->
      <div class ="form-group row ml-2 mt-3">
        <div class="form-title col-3 ml-2 mt-3">
          <%= f.label :occupation_id,"職業",class: "h4"%>
        </div>
        <div class="form-field col-8 ml-2 mt-3">
          <%= f.select :occupation_id,options_from_collection_for_select(Occupation.all,:id,:name) %>
        </div>
      </div>

      <div class ="form-group row ml-2 mt-3">
        <div class="form-title col-3 ml-2 mt-3">
          <%= f.label :email,"メールアドレス",class: "h4"%>
        </div>
        <div class="form-field col-8 ml-2 mt-3">
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
      </div>

      <div class ="form-group row ml-2 mt-3">
        <div class="form-title col-3 ml-2 mt-3">
          <%= f.label :profile_image,"プロフィール画像",class: "h4"%>
        </div>
        <div class="form-field col-8 ml-2 mt-3">
          <%= f.file_field :profile_image %>
        </div>
      </div>

      <div class ="form-group row ml-2 mt-3">
        <div class="form-title col-3 ml-2 mt-3">
          <%= f.label :introduction,"自己紹介文:",class: "h4"%>
        </div>
        <div class="form-field col-8 ml-2 mt-3">
          <%= f.text_area :introduction,class: "w-100"%>
        </div>
      </div>

      <div class="form-group text-center">
        <%= f.submit "更新する",class: "btn btn-success" %>
      </div>
    <% end %>
</div>