<!--ユーザ情報編集画面-->
<div class="container-fluid">

  <div class="row mx-0 my-2">
    <div class="col-md-3 offset-md-2">
      <span class="page_title h2">ユーザ情報の編集</span>
    </div>
    <div class="col-md-4 offset-md-3 mt-2 h5">
      <%= link_to "マイページへ戻る",user_path(@user),class: "h4"%>
    </div>
  </div>

    <%= form_with model: @user,url: user_path(@user),method: :patch,local: true do |f| %>

      <!--エラーメッセージの表示（バリデーションにヒットした場合のみ）-->
      <%= render 'layouts/error_message',model: f.object %>

      <!--名前（性）-->
      <div class="form-group row mx-0 mt-1">
        <div class="col-md-2 offset-md-3 col-form-label">
          <%= f.label :last_name,"名前（性）：",class: "h5"%>
        </div>
        <div class="col-md-2">
          <%= f.text_field :last_name,placeholder: "例：田中",class: "form-control"%>
        </div>
      </div>

      <!--名前（名）-->
      <div class="form-group row mx-0 mt-1">
        <div class="col-md-2 offset-md-3 col-form-label">
          <%= f.label :first_name,"名前（名）：",class: "h5"%>
        </div>
        <div class="col-md-2">
          <%= f.text_field :first_name,placeholder: "例：太郎",class: "form-control"%>
        </div>
      </div>

      <!--ニックネーム-->
      <div class="form-group row mx-0 mt-1">
        <div class="col-md-2 offset-md-3 col-form-label">
          <%= f.label :nickname,"ニックネーム",class: "h5"%>
          <span>(10文字以内):</span>
        </div>
        <div class="col-md-2">
          <%= f.text_field :nickname ,placeholder: "例：タロウ座右衛門",class: "form-control"%>
        </div>
      </div>

      <!--職業-->
      <div class ="form-group row mx-0 mt-1">
        <div class="col-md-2 offset-md-3 col-form-label">
          <%= f.label :occupation_id,"職業：",class: "h5"%>
        </div>
        <div class="col-md-2">
          <%= f.select :occupation_id,options_from_collection_for_select(Occupation.all,:id,:name) %>
        </div>
      </div>

      <!--メールアドレス-->
      <div class ="form-group row mx-0 mt-1">
        <div class="col-md-2 offset-md-3 col-form-label">
          <%= f.label :email,"メールアドレス：",class: "h5"%>
        </div>
        <div class="col-md-2">
          <%= f.email_field :email, autofocus: true, autocomplete: "email",class: "form-control"%>
        </div>
      </div>

      <!--プロフィール画像-->
      <div class ="form-group row mx-0 mt-1">
        <div class="col-md-2 offset-md-3 col-form-label">
          <%= f.label :profile_image,"プロフィール画像：",class: "h5"%>
        </div>
        <div class="col-md-2">
          <%= f.file_field :profile_image %>
        </div>
      </div>

      <!--ユーザ紹介文-->
      <div class ="form-group row mx-0 mt-1">
        <div class="col-md-2 offset-md-3 col-form-label">
          <%= f.label :introduction,"ユーザ紹介文:",class: "h5"%>
        </div>
        <div class="col-md-5">
          <%= f.text_area :introduction,class: "form-control w-100"%>
        </div>
      </div>

      <div class="form-group text-center">
        <%= f.submit "更新する",class: "btn btn-success" %>
      </div>
    <% end %>
</div>