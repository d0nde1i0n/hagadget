<div class="container">

  <div class="site-title mt-3">
    <h2>ユーザ詳細画面</h2>
  </div>

  <div class="row mt-3">

    <div class="col-2">
      <div class="profile-image rounded-circle border border-3 border-info">
        <%= image_tag @user.get_profile_image, size:"150x150" %>
      </div>
    </div>

    <div class="col-10">

      <div class="d-flex justify-content-between mt-1 ml-3">
        <div>
          <h3><%= @user.nickname%></h3>
        </div>
        <div>
          <h3><%= @user.occupation.name %></h3>
        </div>
        <div>
          <% if @user == current_user %><!--投稿ユーザ＝ログインユーザの場合-->
            <!--ユーザ情報編集ボタン-->
            <%= link_to "ユーザ情報編集",edit_user_path(@user),class: "btn btn-success" %>
          <% else %>
            <% if @user.is_follower_by?(current_user) %>
              <%= link_to "フォロー解除",user_relationship_path(@user,current_user),method: :delete,
                class: "btn btn-danger" %>
            <% else %>
                <%= link_to "フォロー",user_relationships_path(@user,current_user),method: :post,
                class: "btn btn-primary",local: true %>
            <% end %>
          <% end %>
        </div>
      </div>

      <div class="d-flex justify-content-between mt-3 ml-3">
        <div class="text-center">
          <!--ガジェット投稿機能実装後に修正する必要あり-->
          <h4>投稿ガジェット数</h4>
          <h3>10</h3>
        </div>
        <div class="text-center">
          <!--フォロー機能実装後に修正する必要あり-->
          <h4>フォロー数</h4>
          <h3>5</h3>
        </div>
        <div class="text-center">
          <!--フォロー機能実装後に修正する必要あり-->
          <h4>フォロワー数</h4>
          <h3>7</h3>
        </div>
      </div>
    </div>

    <div class="mx-auto mt-3 w-100">
      <h3>ユーザ紹介文</h3>
      <div class="border border-3 border-info">
        <%= @user.introduction %>
      </div>
    </div>
  </div>

  <!--ユーザの投稿一覧-->
  <div class="row mt-5"></div>
  <h3><%= @user.nickname%>さんの投稿ガジェット一覧</h3>

  <!--ガジェット一覧テーブルの部分テンプレート-->
  <%= render 'gadgets/index',gadgets: @gadgets %>

</div>