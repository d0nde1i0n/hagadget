 <div class="container">

  <div class="d-flex justify-content-between mt-3">
    <div class="h2">
      <span class="page_title">通知一覧<span class="page_title">
    </div>
    <%= link_to 'マイページへ戻る',user_path(current_user),class: "h5"%>
  </div>

  <!--通知一覧表示-->
  <table class="table  table-hover table-sm mt-3">
    <% @notifications.each do |notification| %>
      <%= render "notifications/#{Notification.action_types.key(notification.action)}",notification: notification %>
      <!--Notification.action_types.key(notification.action)部分について-->
      <!--「部分テンプレートのファイル名」と「enumに設定したアクション名」を同じにしているため、-->
      <!--呼び出すテンプレートファイル名をenumを使用して指定している。-->
    <% end %>
  </table>

 </div>
