<!--フォロー/フォロー解除ボタン：【部分テンプレート】-->
<div id="follow-btn-<%= user.id %>">
  <% if user.is_follower_by?(current_user) %>
  <%= link_to "フォロー解除",user_relationship_path(user,current_user),method: :delete,
      remote: true,class: "btn btn-danger" %>
  <% else %>
  <%= link_to "フォロー",user_relationships_path(user,current_user),method: :post,
      remote: true,class: "btn btn-primary",local: true %>
  <% end %>
</div>
