<!--いいねボタン-->
  <% if gadget.favorited_by?(current_user) %>
     <%= link_to gadget_favorites_path(gadget),class: "favorite-btn text-danger",method: :delete,local: true do %>
        <i class="fas fa-bookmark"></i>
        <%= gadget.favorites.count %>
       <% end %>
  <% else %>
      <%= link_to gadget_favorites_path(gadget),class: "favorite-btn text-primary",method: :post,local: true do %>
        <i class="far fa-bookmark"></i>
        <%= gadget.favorites.count %>
       <% end %>
  <% end %>