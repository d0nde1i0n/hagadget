<header>
  <nav class="navbar navbar-expand-lg">
    <div class="container">
      <%= link_to root_path,class: "navbar-brand text-reset" do %>
        <i class="fas fa-robot"></i>
        <span class="font-weight-bold">Hagajet</span>
        <i class="fas fa-robot"></i>
      <% end %>
      <div class="navbar-text mx-5 font-weight-bold">
        <!--ログインユーザ名の表示-->
        <% if user_signed_in? %>
          <span>ようこそ、<%= current_user.nickname %> さん！</span>
        <% else %>
          <span>ようこそ、ゲストさん！</span>
        <% end %>
      </div>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse flex-column" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
          <% if user_signed_in? %>
            <!--ユーザがログインしている場合-->
            <li>
              <%= link_to user_path(current_user), class:"btn" do %>
                  <i class="far fa-user-circle"></i>
                <span>マイページ</span>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, class:"btn",method: :delete do %>
                <i class="fas fa-sign-out-alt"></i>
                <span>ログアウト</span>
              <% end %>
            </li>
          <% else %>
            <!--ユーザがログインしていない場合-->
            <li>
              <%= link_to new_user_registration_path, class:"btn" do %>
                <i class="fas fa-user-plus"></i>
                <span>新規登録</span>
              <% end %>
            </li>
            <li>
              <%= link_to new_user_session_path, class:"btn" do %>
                <i class="fas fa-sign-in-alt"></i>
                <span>ログイン</span>
              <% end %>
            </li>
          <% end %>
        </ul>
        <!--検索（現段階ではオブジェクトのみ）-->
        <ul class="navbar-nav ml-auto">
          <form id="form1" action="自分のサイトURL" method="get">
          <input id="sbox1" id="s" name="s" type="text" placeholder="キーワードを入力" />
          <input id="sbtn1" type="submit" value="検索" /></form>
        </ul>
      </div>
    </div>
  </nav>
</header>